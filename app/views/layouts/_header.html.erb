<div class="fluid-container">
  <h1 id="header-title"><a href="#"></a>ALE MAIL</h1>
  <div class="navbar box-shadowed">
    <div class="nav-style">
      <% if signed_in? %>
        <%= link_to image_tag('/assets/home.png', :class => "home-img"), user_path(current_user) %>
      <div class="setting">
        <div class="nav nav pull-right settings-img">
            <div class= "dropdown-toggle" data-toggle="dropdown"><%= image_tag('/assets/settings.png', :class => "settings-img") %>
            </div>
              <ul class="dropdown-menu">              
                <li><%= link_to "Profile Settings", edit_user_path(current_user), :id => "setting-text" %></li>           
                <li><%= link_to "Sign out", signout_path, method: "delete", :id => "setting-text" %></li>
              </ul>
            </div>
      <% else %>
            <%= root_path %>
      <% end %>
        </div>
    </div>
  </div>
