<div class="col-xs-2">
</div>
<div class="col-xs-8">
  <%= bootstrap_form_for(@user) do |f| %>
    <%= f.text_field :bar_name  %>
    <%= f.text_field :username  %>
    <%= f.text_field :email %>
    <%= f.text_field :address %>
    <%= f.text_field :phone %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <% if signed_in? %>
    <%= f.submit "Update info", class: "btn btn-large btn-primary" %>
    <% else %>
    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  <% end %>
</div>
<div class="col-xs-2">
</div>

